{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "commonjs": true,
    "browser": false,
    "mocha": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:mocha/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["mocha"],
  "rules": {
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "mocha/no-mocha-arrows": "off"
  }
}
